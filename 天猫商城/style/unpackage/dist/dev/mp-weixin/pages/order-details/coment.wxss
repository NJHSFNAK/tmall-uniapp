
page{
	background: #eeeeee;
}
.pu-coments-input{
	background-color: #FFFFFF; 
	height: 350rpx;
}
.pu-coments-input textarea{
	width: 100%; color: rgb(0, 0, 0) !important;
	padding: 10rpx;
	font-size: 30rpx;
	height: 350rpx;
	overflow-y: auto;
}
.Upload-button{
	width: 130rpx; 
	height: 130rpx; 
	padding-left: 10rpx; 
	padding-bottom: 5rpx;
}
.Upload-button image{
	width: 130rpx; 
	height: 130rpx;
}
.Upload-pictures{
	margin: 15rpx;
}
/* 上传图片 */
.conteng{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
}
.conteng-img{
	width: calc(25% - 10rpx*2);
	height: 150rpx;
	padding: 10rpx;
	position: relative;
}
.conteng-img image{
	width: 100%; 
	height: 150rpx;
	border-radius: 6rpx;
}
.deleteimg{
	width: 33rpx !important; 
	height: 33rpx !important;
	position: absolute;
	top: 0rpx;
	right: 0rpx;
}
/* 提交评论 */
.Su-comments{
	background-color: rgb(255, 83, 2);
	color: #FFFFFF;
	height: 100rpx;
	line-height: 100rpx;
	position: fixed;
	bottom: 0;
	right: 0;
	left: 0;
	text-align: center;
}

